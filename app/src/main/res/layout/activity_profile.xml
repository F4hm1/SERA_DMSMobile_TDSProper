<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/img_profile_photo"
            android:layout_toLeftOf="@+id/img_profile_photo"
            android:layout_toStartOf="@+id/img_profile_photo">

            <TextView
                android:id="@+id/text_profile_name_fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Nama..."
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_profile_posisi_fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_profile_name_fp"
                android:layout_marginTop="0dp"
                android:text="Loading Posisi..."
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_profile_company_fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_profile_posisi_fp"
                android:layout_marginTop="0dp"
                android:text="Loading Posisi..."
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_profile_poolname_fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_profile_company_fp"
                android:layout_marginTop="0dp"
                android:text="Loading Posisi..."
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_profile_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/imageview_border"
            android:scaleType="centerCrop"
            android:src="@drawable/fotosample"
            android:cropToPadding="true"
            android:adjustViewBounds="false" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <!--NRP Field-->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp">
                    <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="NRP" />
                    <TextView
                        android:id="@+id/text_profile_nrp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:text="Loading NRP..." />

                </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--Nama Field-->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp">
                    <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="Nama Lengkap" />
                    <TextView
                        android:id="@+id/text_profile_fullname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:text="Loading Nama..." />

                </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--User Costumer Field-->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp">
                    <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="Penanggung Jawab" />
                    <TextView
                        android:id="@+id/text_profile_usercostumer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:text="Loading Panangg..." />

                </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--DOO Field-->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:text="Koordinator" />
                    <TextView
                        android:id="@+id/text_profile_doo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:text="Loading DOO..." />

                </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--KTP Exp Date Field-->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#fff"
                            android:clickable="true"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:text="Tanggal Akhir Masa Berlaku KTP" />
                        <TextView
                            android:id="@+id/text_profile_ktpexp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#fff"
                            android:clickable="true"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:text="Loading nama perusahaan..." />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--SIM Exp Date Field-->
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >

                        <TextView
                            android:id="@+id/text_title_sim"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#fff"
                            android:clickable="true"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:text="Tanggal Akhir Masa Berlaku" />
                        <TextView
                            android:id="@+id/text_profile_simexp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#fff"
                            android:clickable="true"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:text="Loading nama pool..." />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--&lt;!&ndash;Training Field&ndash;&gt;-->
