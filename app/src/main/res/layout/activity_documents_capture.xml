                                <!--android:text="Rp0,-"/>-->

                            <EditText
                                android:id="@+id/documents_et_asdp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:textSize="15sp"
                                android:inputType="number"
                                android:hint="0"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:textSize="16sp"
                                android:hint="Portal"/>

                            <!--<EditText-->
                                <!--android:id="@+id/documents_et_portal"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="1.2"-->
                                <!--android:textSize="15sp"-->
                                <!--android:inputType="number"-->
                                <!--android:text="Rp0,-"/>-->

                            <EditText
                                android:id="@+id/documents_et_portal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:textSize="15sp"
                                android:inputType="number"
                                android:hint="0"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
