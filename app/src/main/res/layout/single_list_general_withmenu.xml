<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/single_list_his_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <TextView
            android:transitionName="trans_order_code"
            android:id="@+id/single_list_his_title"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Tittle"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/single_list_his_information"
            android:layout_below="@id/single_list_his_title"
            android:textColor="@color/colorTextSecondary"
            android:text="Information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/single_list_his_status"
            android:textColor="@color/colorAccentDark"
            android:text="Status"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/single_list_his_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_options_card_black_24dp"
            android:layout_below="@+id/single_list_his_status"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>