<?xml version="1.0" encoding="utf-8"?>
<com.serasiautoraya.tdsproper.CustomView.EmptyInfoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/empty_info_image"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            app:layout_marginTopPercent="25%"
            android:src="@drawable/ic_empty_order"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="30%" />

        <TextView
            android:id="@+id/empty_info_message"
            android:layout_below="@id/empty_info_image"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/colorTextSecondary"
            android:text="Tidak terdapat order yang aktif untuk saat ini"
            android:textSize="20sp"
            app:layout_heightPercent="30%"
            app:layout_widthPercent="70%" />

    </android.support.percent.PercentRelativeLayout>

</com.serasiautoraya.tdsproper.CustomView.EmptyInfoView>