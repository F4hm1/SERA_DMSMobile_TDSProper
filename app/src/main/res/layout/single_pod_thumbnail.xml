<?xml version="1.0" encoding="utf-8"?>
<com.serasiautoraya.slimobiledrivertracking_training.MVP.CustomView.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/squareRelLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:layout_margin="4dp"
    android:layout_rowWeight="1">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="2dp">

        <com.serasiautoraya.slimobiledrivertracking_training.MVP.CustomView.SquareImageView
            android:id="@+id/pod_iv_prove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_rowWeight="1"
            android:background="@color/colorDeepOn"
            android:scaleType="centerCrop"
            android:src="@drawable/add_foto_pod" />

        <TextView
            android:id="@+id/pod_tv_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/black_transparent"
            android:gravity="center"
            android:text="75%"
            android:textColor="@color/colorDeepOn"
            android:textStyle="bold"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pod_pb_progress"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_gravity="bottom"
            android:progress="36"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/pod_ib_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:layout_gravity="right|top"/>

    </android.support.v7.widget.CardView>

</com.serasiautoraya.slimobiledrivertracking_training.MVP.CustomView.SquareRelativeLayout>