<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/acknowledge_dialog_ordercode"
        android:textColor="@color/colorAccentDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:text="Order Code 173652"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/acknowledge_dialog_ordercode"
        android:layout_height="wrap_content">

        <!--order_title_hub-->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_dest"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_destination" android:text="Surabaya"
                android:textStyle="bold"
                android:layout_weight="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
        </TableRow>

        <!--order_title_hub-->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_activityname"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_hub" android:text="Yes"
                android:layout_weight="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
        </TableRow>

        <!--order_title_origin-->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_origin"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_origin" android:text="Jakarta"
                android:layout_weight="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
        </TableRow>

        <!--order_title_etd-->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/table_bottom_border"
            android:gravity="left">
            <TextView
                android:text="@string/order_title_etd"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />

            <TextView
                android:id="@+id/acknowledge_dialog_etd" android:text="15/11/2016 08:00:00"
                android:layout_weight="1"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" />
