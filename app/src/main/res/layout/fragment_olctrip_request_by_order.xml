<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="@dimen/header_text"
            android:text="@string/olctrip_label_header"/>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/documents_card_olctrip_cust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPadding="3dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/documents_lin_olc_cust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:text="CUSTOMER"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:textSize="16sp"
                                android:text="OLC"/>



                            <Spinner
                                android:paddingLeft="5dp"
                                android:layout_weight="1.2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/olctrip_spinner_olc_cust" />

                            <!--<EditText
                                android:id="@+id/documents_et_olc_cust"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:textSize="15sp"
                                android:maxLength="3"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:hint=""/>-->

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:textSize="16sp"
                                android:text="TRIP"/>

                            <EditText
                                android:id="@+id/documents_et_trip_cust"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:textSize="15sp"
                                android:maxLength="3"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:hint=""/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:id="@+id/textview_desc_cust"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="@string/klaim_description_customer"
                                />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/documents_card_olctrip_ops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                card_view:contentPadding="3dp"
                android:layout_marginBottom="8dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/documents_lin_olc_ops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextPrimary"
                        android:text="OPERATION"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:textSize="16sp"
                                android:text="OLC"/>

                            <Spinner
                                android:paddingLeft="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:id="@+id/olctrip_spinner_olc_ops" />

                            <!--<EditText
                                android:id="@+id/documents_et_olc_ops"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:textSize="15sp"
                                android:maxLength="3"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:hint=""/>-->

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:textSize="16sp"
                                android:text="TRIP"/>

                            <EditText
                                android:id="@+id/documents_et_trip_ops"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:textSize="15sp"
                                android:maxLength="3"
                                android:inputType="number"
                                android:digits="0123456789"
                                android:hint=""/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:id="@+id/textview_desc_ops"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="@string/klaim_description_operation"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="@dimen/header_text"
                android:text="@string/olctrip_label_header">
            </TextView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textSize="@dimen/header_text"
                android:text="@string/olctrip_label_cust">
            </TextView>





            &lt;!&ndash;Input Customer&ndash;&gt;
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textil_layout_olctrip_olcamount_cust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/olctrip_edittext_olcamount_cust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:hint="@string/olctrip_label_olc"
                    android:textColor="@color/colorTextSecondary"/>
            </android.support.design.widget.TextInputLayout>

            &lt;!&ndash;Input Jumlah Trip&ndash;&gt;
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textil_layout_olctrip_tripamount_cust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/olctrip_edittext_tripamount_cust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:hint="@string/olctrip_label_trip"
                    android:textColor="@color/colorTextSecondary"/>
            </android.support.design.widget.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="55dp"
                android:background="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textSize="@dimen/header_text"
                android:text="@string/olctrip_label_ops">
            </TextView>

            &lt;!&ndash;Input Customer&ndash;&gt;
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textil_layout_olctrip_olcamount_ops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/olctrip_edittext_olcamount_ops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:hint="@string/olctrip_label_olc"
                    android:textColor="@color/colorTextSecondary"/>
            </android.support.design.widget.TextInputLayout>

            &lt;!&ndash;Input Jumlah Trip&ndash;&gt;
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textil_layout_olctrip_tripamount_ops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/olctrip_edittext_tripamount_ops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:hint="@string/olctrip_label_trip"
                    android:textColor="@color/colorTextSecondary"/>
            </android.support.design.widget.TextInputLayout>-->




            <!--Submit-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/olctrip_btn_submit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:layout_marginTop="@dimen/profile_height"
                    android:drawablePadding="10dp"
                    android:textColor="@color/colorTextIcon"
                    android:text="@string/olctrip_label_submit"
                    android:gravity="left|center_vertical"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_rounded_corner"
                    android:drawableLeft="@drawable/ic_submit_24dp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>