<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/order_history_detail_card"
    card_view:contentPaddingRight="16dp"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingBottom="12dp"
    card_view:contentPaddingTop="12dp"
    android:layout_marginBottom="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:id="@+id/documents_lin_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_history_detail_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:text="1 - Loading Barang"/>

        <TableLayout
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--activity_code-->
            <TableRow
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:background="@drawable/table_bottom_border"
                android:gravity="left">
                <TextView
                    android:text="@string/order_history_detail_activity_code"
                    android:layout_column="0"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />

                <TextView
                    android:id="@+id/order_history_detail_activity_code" android:text="-"
                    android:layout_column="1"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />
            </TableRow>

            <!--activity_type-->
            <TableRow
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:background="@drawable/table_bottom_border"
                android:gravity="left">
                <TextView
                    android:text="@string/order_history_detail_activity_type"
                    android:layout_column="0"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />

                <TextView
                    android:id="@+id/order_history_detail_activity_type" android:text="-"
                    android:layout_column="1"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />
            </TableRow>

            <!--time_target-->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="10"
                android:background="@drawable/table_bottom_border"
                android:gravity="left">
                <TextView
                    android:text="@string/order_history_detail_time_target"
                    android:layout_column="0"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />

                <TextView
                    android:id="@+id/order_history_detail_time_target" android:text="-"
                    android:layout_column="1"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />
            </TableRow>

            <!--time_baseline-->
            <TableRow
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:background="@drawable/table_bottom_border"
                android:gravity="left">
                <TextView
                    android:text="@string/order_history_detail_time_baseline"
                    android:layout_column="0"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />

                <TextView
                    android:id="@+id/order_history_detail_time_baseline" android:text="-"
                    android:layout_column="1"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />
            </TableRow>

            <!--time_actual-->
            <TableRow
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:background="@drawable/table_bottom_border"
                android:gravity="left">
                <TextView
                    android:text="@string/order_history_detail_time_actual"
                    android:layout_column="0"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />

                <TextView
                    android:id="@+id/order_history_detail_time_actual" android:text="-"
                    android:layout_column="1"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />
            </TableRow>

            <!--location_target_text-->
            <TableRow
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:background="@drawable/table_bottom_border"
                android:gravity="left">
                <TextView
                    android:text="@string/order_history_detail_location_target"
                    android:layout_column="0"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />

                <TextView
                    android:id="@+id/order_history_detail_location_target" android:text="-"
                    android:layout_column="1"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>